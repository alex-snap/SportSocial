@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    @*------------ Open Graph------- *@
    <meta property="og:url" content="@(ViewBag.OgUrl != null ? ViewBag.OgUrl : Request.Url.ToString())" />
    <meta property="og:title" content="@(ViewBag.OgTitle ?? "Fortress")" />
    <meta property="og:description" content="@(ViewBag.OgDescription ?? "Fortress")" />
    <meta property="og:site_name" content="IgTemplate.ru" />
    <meta property="og:image" content="@(ViewBag.OgImage ?? "http://" + Request.Url.Host + "/content/images/logo.png")" />
    <meta property="og:type" content="website" />
    @*------------End Open Graph----- *@

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@(ViewBag.Title ?? "Fortress")</title>
    <meta name="keywords" content="@(ViewBag.Keywords ?? "Fortress")" />
    <meta name="description" content="@(ViewBag.Description ?? "Fortress")" />
    @Styles.Render("~/content/stylesCss1")
    @Styles.Render("~/content/stylesLess")
    @RenderSection("Styles", false)
    <link rel="shortcut icon" href="/favicon.ico?v=2" type="image/x-icon">
</head>
<body>
    @RenderBody()
    @Scripts.Render("~/bundles/assets/scripts")
    @RenderSection("Scripts", false)
    @RenderLocalizationIncludes(CurrentUser.IsAdmin)

    @if (!CurrentUser.IsPaid)
    {
        <div id="payModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="mySmallModalLabel">Доступ к конференциям</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Просмотр конференций доступен только участникам клуба Fortress
                        </p>
                        @if (CurrentUser.IsAnonimous)
                        {
                            <p>Зарегистрируйтесь, чтобы узнать подробности</p>
                        }
                        else
                        {
                            <p><a href="@Url.Action("Index", "Pay")">Подробнее</a></p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>