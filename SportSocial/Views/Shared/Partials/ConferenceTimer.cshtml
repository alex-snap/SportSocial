@model BLL.Admin.Conference.ViewModels.ConfModel
@using DAL.DomainModel.EnumProperties;

@if (Model != null)
{
    if (Model.Status == ConfStatus.Process)
    {
        <div class="block">
            <div class="conf-date">
                <div>
                    <a href="@Url.Action("Item", "Conference", new {id = Model.Id})" class="conf-date__link">Видеоконференция на тему "@Model.Title" уже началась! Ссылка</a>
                </div>
                @if (!CurrentUser.IsPaid)
                {
                    <div class="conf-date__anonim">
                        Конференции доступны только участникам клуба Fortress. <a href="@Url.Action("Index", "Pay")">Подробнее...</a>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="block">
            <div conf-date="@Model.Stamp"></div>
        </div>
    }
}

