@{
    Layout = null;
}

<form class="reviews__form"
      ng-class="{ 'reviews__form--active': reviewForm.text.length,
                              'reviews__form--valid': reviewForm.text.length >= minlength}"
      ng-submit="createReview(reviewForm)">
    <div class="row">
        <div class="col-sm-5 col-md-4 col-lg-3">
            <div class="rf__type-wrap">
                <span class="rf__type__text">Я хочу</span>
                <select ng-model="reviewForm.type"
                        ng-options="item.id as item.name for item in types"
                        class="rf__type__select"></select>
                <div class="rf__min">Напишите ещё хотя бы {{ minlength-reviewForm.text.length | formatWord:['символ', 'символа', 'символов']:true}}</div>
            </div>
            <button ng-disabled="reviewForm.text.length < minlength"
                    type="submit" class="btn btn--main">
                Отправить
            </button>
        </div>
        <div class="col-sm-7 col-md-8 col-lg-9">
            <textarea ng-model="reviewForm.text"
                      class="rf__text" placeholder="Введите текст..."></textarea>
        </div>
    </div>
</form>