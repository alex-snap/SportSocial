@model BLL.Blog.ViewModels.BlogPostViewModel
@{
    ViewBag.Title = "Fortress - " + Model.Title;
    Layout = "~/Views/Blog/Shared/Layouts/BlogLayout.cshtml";
}
<div class="article">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="article__item block">
                    <div class="article__item__img-wrap">
                        <img src="@Model.Images[0].Url?width=800&height=430&mode=crop" alt="статьюшка" class="article__item__img" />
                    </div>
                    <div class="article__item__text">
                        <h2 class="article__item__title">@Model.Title</h2>
                        <div class="article__item__desc">
                            @Model.Text
                        </div>
                        <div class="article__item__bottom">
                            <div class="pull-left">
                                @Html.Partial("Shared/Partials/Article/Info")
                            </div>
                            <div class="pull-right">
                                <div like-dislike
                                     count="@Model.Rating"
                                     isliked="true"
                                     isdisliked="false"
                                     type="Article"
                                     id="@Model.Id"></div>
                            </div>
                        </div>
                    </div>
                </div>

                @*Комментарии*@
                @Html.Partial("Partials/Comments")
            </div>
            <div class="col-sm-4">

                @*Информация об авторе*@
                <div class="block">
                    @Html.Partial("Shared/Partials/Blocks/User")
                </div>

                @*Таймер конференции*@
                <div class="block">
                    <div conf-date="12312"></div>
                </div>

                @Html.Partial("Shared/Partials/Blocks/Menu")
            </div>
        </div>
    </div>
</div>








