@{
    ViewBag.Title = "Fortress - Блог";
    Layout = "../Blog/Shared/Layouts/BlogLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="center-block col-xs-6">
            <div ng-controller="RegistrationCtrl">
                <form ng-submit="requestCode(reg);">
                    <div class="form-group">
                        <label for="regName">Имя</label>
                        <input ng-model="reg.name"
                               ng-disabled="disableInp" 
                               type="text" class="form-control" id="regName">
                    </div>
                    <div class="form-group">
                        <label for="regPass1">Пароль</label>
                        <input ng-model="reg.password"
                               ng-disabled="disableInp" 
                               type="password" class="form-control" id="regPass1">
                    </div>
                    <div class="form-group">
                        <label for="regPass2">Повторите пароль</label>
                        <input ng-model="reg.passwordRepeat"
                               ng-disabled="disableInp" 
                               type="password" class="form-control" id="regPass2">
                    </div>
                    <div class="form-group">
                        <label for="regPhone">Номер телефона</label>
                        <input ng-model="reg.phone"
                               ng-disabled="disableInp" 
                               type="text" class="form-control" id="regPhone">
                    </div>
                    <button type="submit" class="btn btn-default">Далее</button>
                </form>
                <div class="form-group"
                     ng-cloak
                     ng-show="smsBlockShow">
                    <label for="regCode">Код подтверждения</label>
                    <input ng-model="reg.code"
                           ng-disabled="disableCode" 
                           type="text" id="regCode">
                    <button type="button" class="btn btn-default" ng-click="register(reg.code)">Создать профиль</button>
                </div>
            </div>
        </div>
    </div>
</div>

