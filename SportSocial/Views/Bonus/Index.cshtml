@using BLL.Common.Extensions
@model List<BLL.Bonus.Objects.BonusVideoModel>
@{
    ViewBag.Title = "Бонусные видео";
    Layout = "../Blog/Shared/Layouts/BlogLayout.cshtml";
}
<div ng-controller="BonusCtrl"
     class="container bonus-page">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="mod block">
                <div class="mod__header">
                    <div class="mod__header__title">Все бонусные курсы Fortress</div>
                </div>
                <div class="mod__content p-all">
                    <div class="tabs-content">
                        <h3>Бонусный курс "Прорыв к результату"</h3>
                        <ul class="bp-list">
                            @foreach (var video in Model)
                            {
                                <li class="bp-list__it @(video.IsActive ? " bp-list__it--available" : "")"
                                    @if (video.IsActive) { @: data-video-play='@Html.Raw(video.ToJson())'
                                                                        }>
                                    <h3 class="bp-list__it__title">@video.Title</h3>
                                    <div class="bp-list__it__img-wrap">
                                        <img class="bp-list__it__img" src="@video.ImageUrl" />
                                        @if (video.IsActive)
                                        {
                                            <div class="bp-list__it__status">
                                                <div>@video.Title</div>
                                            </div>
                                            <div class="bp__play"></div>
                                        }
                                        else
                                        {
                                            <div class="bp-list__it__status">
                                                Видео недоступно, не хватает суммарной подписки
                                            </div>
                                        }
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
