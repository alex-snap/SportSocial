<section class="record">
    <div class="bread">
        <a ui-sref="main.profile({userId: $root.user.id})" class="bread__back">
            <i class="bread__back__icon"></i>
            <span class="bread__back__text">@R("Мой дневник"){{record.ownerId}}</span>
        </a>
        <div class="bread__title">
            @R("Запись в дневнике")
        </div>
    </div>
    <div class="record__inner" content-height=".bread" onresize="false" data-loader="record.it.loader">
        <div ng-if="!record.it.loader" class="record__wrap">
            <div class="container">
                <p class="record__text">
                    {{record.it.text}}
                </p>
                <div class="item-bottom record__bottom">
                    <div class="item-author">
                        <img ng-src="{{ record.it.author.avatar | imageResize:{w: 45, h: 45} }}" class="ia__img" />
                        <div class="ia__info">
                            <p class="ia__name">{{record.it.author.fullName}}</p>
                            <p class="ia__date">{{record.it.date}}</p>
                        </div>
                    </div>
                    <div ng-if="record.it.isOwner" class="rcd__controls">
                        <div class="rcd__control rcd__control--edit" ng-click="record.edit()"></div>
                        <div class="rcd__control rcd__control--remove" ng-click="record.remove()"></div>
                    </div>
                    <likes-in-row ng-model="record.it.likes" data-id="{{::record.it.id}}" data-type="record"></likes-in-row>
                    <div class="btn btn-fill-green">@R("Поделиться")</div>
                </div>
                <div ng-if="record.it.media.length" class="record__media">
                    <div ng-repeat="m in record.it.media" class="rm__it">
                        <img ng-src="{{ m.img | imageResize:{w: 75, h: 75} }}" class="rm__it__img" />
                        <div class="rm__it__overlay" ng-if="m.type=='video'"><i class="icon-play"></i></div>
                        {{m.type}}
                    </div>
                </div>
                <ul ng-if="record.it.tags.length" class="tag-list">
                    <li ng-repeat="tag in record.it.tags" class="tl__item">
                        <span class="tl__text">{{tag}}</span>
                    </li>
                </ul>
                <div class="record__form"></div>
            </div>
        </div>
        <div class="record__comments">

        </div>
    </div>
</section>