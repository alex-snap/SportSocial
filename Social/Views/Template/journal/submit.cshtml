<div class="journal-submit"
        ng-class="{ 'open': open }">
    <img ng-src="{{$root.user.avatar | imageResize:{w: 46, h: 46} }}" class="jos__avatar">
    <form class="form">
        <div class="fs-form__row">
            <div class="jos__text-wrap">
                <textarea ng-model="j.text" class="fs-input" placeholder="@R("Как прошел твой день?")"></textarea>
                <div class="media-preview">
                    <div class="mp__item" ng-repeat="it in j.media">
                        <img class="mp__img" ng-src="{{ it.url | imageResize:{w: 45, h: 45} }}" />
                        <div ng-if="it.type=='video'" class="mp__item__video__overlay">
                            <i class="play"></i>
                        </div>
                        <span class="mp__close" ng-click="removeMedia(it)">
                            <i class="remove"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="jos__media-actions max">
                <media-upload ng-model="j.media"></media-upload>
            </div>
        </div>
        <div class="fs-form__row max">
            <themes-autocomplete ng-model="j.tags"></themes-autocomplete>
        </div>
        <!--<div class="jos__social">
            social sharing
        </div>-->
        <div class="fs-form__submit max">
            <button type="button" class="link link--white" ng-click="closeForm()">@R("Отмена")</button>
            <button type="button" class="btn btn-fill-green btn-xl" ng-click="submit()">@R("Отправить")</button>
        </div>
    </form>
</div>