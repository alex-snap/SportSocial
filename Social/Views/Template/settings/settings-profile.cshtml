<div class="container">

    <div data-loader="sett.pageLoading"
         ng-if="!sett.pageError"
         class="col-lg-offset-2 col-lg-8">
        <div data-server-validation="sett.serverValidation">
            <form class="form-horizontal fs-form" ng-submit="sett.save()">
                <div class="form-group">reg
                    <label for="firstName" class="col-sm-4 control-label">@R("Имя:")</label>
                    <div class="col-sm-8">
                        <input ng-model="sett.model.firstName" type="text" class="fs-input fs-input--border" id="firstName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="lastName" class="col-sm-4 control-label">@R("Фамилия:")</label>
                    <div class="col-sm-8">
                        <input ng-model="sett.model.lastName" type="text" class="fs-input fs-input--border" id="lastName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="birthday" class="col-sm-4 control-label">@R("Дата рождения:")</label>
                    <div class="col-sm-8">
                        <input ng-model="sett.model.birthday"
                               name="birthday"
                               type="text"
                               class="fs-input fs-input--border"
                               datepicker-popup="dd MMM yyyy"
                               datepicker-options="sett.datepickerOptions"
                               show-button-bar="false"
                               is-open="open"
                               ng-click="open=true" />
                    </div>
                </div>
                <div class="form-group">
                    <label form="gender" class="col-sm-4 control-label">@R("Пол:")</label>
                    <div class="col-sm-8">
                        <select id="gender" ng-model="sett.model.gender" class="fs-input fs-input--border"
                                ng-options="obj.label for obj in sett.prop.genders track by obj.value"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="sprotTime" class="col-sm-4 control-label">@R("В спорте уже:")</label>
                    <div class="col-sm-8">
                        <select id="sprotTime" ng-model="sett.model.sportTime" class="fs-input fs-input--border"
                                ng-options="obj.label for obj in sett.prop.sportTimes track by obj.value"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-fill-green btn-xl">@R("Сохранить")</button>
                    </div>
                </div>
            </form>
        </div>

    </div>

    <div ng-if="sett.pageError"
         class="server-error">
        <div class="container">
            <div class="alert alert-warning text-center">@R("Что то пошло не так. Пожалуйста вернитесь на страницу настроек профиля позже. Мы уже прилагаем все усилия чтобы устранить проблему.")</div>
        </div>
    </div>
</div>