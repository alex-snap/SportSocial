<div class="container">

    <div data-loader="sett.pageLoading"
         ng-if="!sett.pageError"
         class="col-lg-offset-2 col-lg-8">
        <div data-server-validation="sett.passwordValidation">
            <form class="form-horizontal fs-form" ng-submit="sett.changePassword()">
                <div class="form-group">
                    <label for="inputOldPassword" class="col-sm-4 control-label">@R("Старый пароль:")</label>
                    <div class="col-sm-8">
                        <input name="oldPassword" ng-model="sett.pass.oldPassword" type="password" class="fs-input fs-input--border" id="inputOldPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputNewPassword" class="col-sm-4 control-label">@R("Новый пароль:")</label>
                    <div class="col-sm-8">
                        <input name="newPassword" ng-model="sett.pass.newPassword" type="password" class="fs-input fs-input--border" id="inputNewPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputNewRepeatPassword" class="col-sm-4 control-label">@R("Повторите новый пароль:")</label>
                    <div class="col-sm-8">
                        <input name="newRepeatPassword" ng-model="sett.pass.newRepeatPassword" type="password" class="fs-input fs-input--border" id="inputNewRepeatPassword">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-fill-green btn-xl">@R("Изменить пароль")</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="form-horizontal fs-form">

            <div class="form-group">
                <div class="col-sm-4 control-label">@R("Текущий номер телефона:")</div>
                <div class="col-sm-8">
                    <span class="fs-input-empty">{{sett.model.phone}}</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button modal-click="changePhoneGetCode" type="button" class="btn btn-fill-green btn-xl">@R("Изменить номер телефона")</button>
                </div>
            </div>
        </div>
    </div>
    
    <div ng-if="sett.pageError"
         class="server-error">
        <div class="container">
            <div class="alert alert-warning text-center">@R("Что то пошло не так. Пожалуйста вернитесь на страницу настроек аккаунта позже. Мы уже прилагаем все усилия чтобы устранить проблему.")</div>
        </div>
    </div>
</div>